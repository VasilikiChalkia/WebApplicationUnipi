@using WebApplicationUnipi.Services.Factories;
@using WebApplicationUnipi.Controllers;
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "MyReqsGrid";
        settings.CallbackRouteValues = new { Controller = "MyProfile", Action = "MyLeaveRequestsGridViewPartial" };

        settings.CommandColumn.ShowNewButton = false;
        settings.CommandColumn.ShowDeleteButton = false;
        settings.CommandColumn.ShowEditButton = false;
        settings.KeyFieldName = "Id";
        //settings.CommandColumn.Width = 50;
        settings.CommandColumn.Visible = false;

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;
        //settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        //settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        //settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        //settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        //settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.HideDataCells;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = true;
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        //settings.SettingsBehavior.AllowEllipsisInText = true;
        settings.SettingsCustomizationDialog.Enabled = true;
        settings.Styles.Cell.Wrap = DefaultBoolean.True;


        settings.Columns.Add(col =>
        {
            col.FieldName = "DateCreated";
            col.Caption = "Date Created";
            col.PropertiesEdit.DisplayFormatString = "dd/MM/yyyy HH:mm:ss";

            col.Settings.AllowAutoFilter = DefaultBoolean.False;
        });
        settings.Columns.Add(col =>
        {
            col.FieldName = "TypeOfLeave";
            col.Caption = "Type";
            Dictionary<int, string> dict = new Dictionary<int, string>();
            foreach (WebApplicationUnipi.Models.Enums.LeaveTypes option in Enum.GetValues(typeof(WebApplicationUnipi.Models.Enums.LeaveTypes)))
            {
                dict.Add((int)option, option.GetDisplayAttributeFrom());
            }
            col.ColumnType = MVCxGridViewColumnType.ComboBox;
            var comboBoxProperties = col.PropertiesEdit as ComboBoxProperties;
            comboBoxProperties.TextField = "TypeOfLeave";
            comboBoxProperties.DataSource = dict;
            comboBoxProperties.TextField = "Value";
            comboBoxProperties.ValueField = "Key";
            comboBoxProperties.ValueType = typeof(WebApplicationUnipi.Models.Enums.LeaveTypes);
        });
        settings.Columns.Add(col =>
        {
            col.FieldName = "DateFrom";
            col.PropertiesEdit.DisplayFormatString = "dd/MM/yyyy HH:mm";
            col.Settings.AllowAutoFilter = DefaultBoolean.False;
        });
        settings.Columns.Add(col =>
        {
            col.FieldName = "DateTo";
            col.PropertiesEdit.DisplayFormatString = "dd/MM/yyyy HH:mm";
            col.Settings.AllowAutoFilter = DefaultBoolean.False;
        });
        settings.Columns.Add(col =>
        {
            col.FieldName = "AmountRequested";
            col.Caption = "Amount Requested";
        });
        settings.Columns.Add("Comments");
        settings.Columns.Add(col =>
        {
            col.FieldName = "Status";
            //col.Caption = "";
            Dictionary<int, string> dict = new Dictionary<int, string>();
            foreach (var option in Enum.GetValues(typeof(WebApplicationUnipi.Models.Enums.LeavesRequestStatus)))
            {
                dict.Add((int)option, option.ToString());
            }
            col.ColumnType = MVCxGridViewColumnType.ComboBox;
            var comboBoxProperties = col.PropertiesEdit as ComboBoxProperties;
            comboBoxProperties.TextField = "Status";
            comboBoxProperties.DataSource = dict;
            comboBoxProperties.TextField = "Value";
            comboBoxProperties.ValueField = "Key";
            comboBoxProperties.ValueType = typeof(WebApplicationUnipi.Models.Enums.LeavesRequestStatus);

            col.Settings.AllowAutoFilter = DefaultBoolean.False;
        });

        settings.Columns.Add(column =>
        {
            column.Caption = "Delete";
            column.EditFormSettings.Visible = DefaultBoolean.False;
            column.SetDataItemTemplateContent(container =>
            {
                Html.DevExpress().HyperLink(hyperlink =>
                {
                    var visibleIndex = container.VisibleIndex;
                    var keyValue = container.KeyValue;
                    var Id = DataBinder.Eval(container.DataItem, "Id");
                    hyperlink.Name = "dl" + keyValue.ToString();
                    hyperlink.Properties.Text = "🗑️";
                    hyperlink.NavigateUrl = Url.Action("DeleteLeaveRequest", "MyProfile", new { id = Id });
                }).Render();
            });
        });


        settings.Columns.Add(column =>
        {
            column.FieldName = "Files";
            column.EditFormSettings.Visible = DefaultBoolean.False;
            column.Settings.AllowAutoFilter = DefaultBoolean.False;
            column.SetDataItemTemplateContent(container =>
            {
                var keyValue = container.KeyValue;
                var Id = (int)DataBinder.Eval(container.DataItem, "Id");
                string fileNames = (string)DataBinder.Eval(container.DataItem, "Files");
                var fileList = fileNames.Split(',').ToList();

                foreach (var i in fileList)
                {
                    Html.DevExpress().HyperLink(hyperlink =>
                    {
                        hyperlink.Name = "hf" + keyValue.ToString() + fileList.IndexOf(i).ToString();
                        hyperlink.Properties.Text = i + ((fileList.IndexOf(i) + 1 != fileList.Count()) ? ", " : "");
                        hyperlink.NavigateUrl = Url.Action("DownloadLeavesFile", "AdminAnnualLeaves", new { requestId = Id, fileName = i });
                        hyperlink.Properties.ClientSideEvents.Click = "escapeBeforeUnload";
                    }).Render();
                }
            });
        });


        settings.Columns.Add(column =>
        {
            column.Caption = "Upload";
            column.CellStyle.CssClass = "checkdata-btn-cell";
            column.EditFormSettings.Visible = DefaultBoolean.False;
            column.SetDataItemTemplateContent(container =>
            {
                Html.DevExpress().HyperLink(hyperlink =>
                {
                    var visibleIndex = container.VisibleIndex;
                    var keyValue = container.KeyValue;
                    var reqId = DataBinder.Eval(container.DataItem, "Id");
                    hyperlink.Name = "hl" + keyValue.ToString();
                    hyperlink.Properties.Text = "Upload file";
                    hyperlink.ControlStyle.CssClass = "btnOutline-lightBg";
                    hyperlink.NavigateUrl = Url.Action("UploadLeaveRequestFile", "MyProfile", new { id = reqId });
                }).Render();
            });
        });

        settings.FormatConditions.AddHighlight(c =>
        {
            c.FieldName = "Status";
            c.Value1 = (byte)WebApplicationUnipi.Models.Enums.LeavesRequestStatus.Requested;
            c.Rule = GridConditionRule.Equal;
            c.Format = GridConditionHighlightFormat.ItalicText;
        });

        settings.Toolbars.Add(t =>
        {
            t.EnableAdaptivity = true;
            t.Items.Add(GridViewToolbarCommand.ShowCustomizationDialog).Text = "Organize Menu";
        });



    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()
